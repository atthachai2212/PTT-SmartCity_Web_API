    </aside>
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-dashboard"></i> @ViewBag.appTitle</h1>
                <p>@ViewBag.appSubTitle</p>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
                <li class="breadcrumb-item"><a href="#">@ViewBag.appTitle</a></li>
            </ul>
        </div>
        @if (controllerName != "Help")
        {
            @RenderBody()
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="tile">
                        <h3 class="tile-title">@ViewBag.HeaderTitle</h3>
                        <div class="embed-responsive embed-responsive-item">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        }
