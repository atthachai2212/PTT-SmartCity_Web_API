                                <th>GatewayEUI</th>
                                <th>Full</th>
                                <th>Flame</th>
                                <th>AirLevel (mm)</th>
                                <th>RSSI</th>
                                <th>SNR</th>
                            </tr>
                        </thead>
                        @*<tbody>
                                @foreach (var item in Model)
                                {
