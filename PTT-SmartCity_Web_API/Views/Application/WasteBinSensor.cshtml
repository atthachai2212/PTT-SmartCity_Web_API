    </div>
</div>

@section scripts{
    <script>
        $('#applicationNav').addClass('is-expanded');
        $('#wasteBinNav').addClass('active').css('font-weight', 'bold');
    </script>
    <script type="text/javascript">
        $(document).ready(function() {
            var dt = new Date();
            var month = dt.getMonth() + 1;
            var day = dt.getDate();
            var strDateNow = dt.getFullYear() + '/' +
                (month < 10 ? '0' : '') + month + '/' +
                (day < 10 ? '0' : '') + day;
            var minutes = dt.getMinutes();
            var strTimeNow = dt.getHours() + ":" +
                (minutes < 10 ? '0' + minutes : minutes);
            var dateStart = strDateNow;
            var dateEnd = strDateNow;
            var timeStart = strTimeNow;
            var timeLimit = strTimeNow;
            $(function () {
                $('#date_timepicker_start').datetimepicker({
                    timepicker: true,
                    datepicker: true,
                    format: 'Y-m-d H:i' + ':00',
                })

                $('#date_timepicker_end').datetimepicker({
                    timepicker: true,
                    datepicker: true,
                    format: 'Y-m-d H:i' + ':00',
                })
            });

            InitOverviewDataTable();
            $("#btnDataFilter").click(function () {
                if ($.fn.DataTable.isDataTable('#tbWasteBinSensor')) {
                    $('#tbWasteBinSensor').DataTable().destroy();
                    $('#tbWasteBinSensor tbody').empty();
                }
                InitOverviewDataTable();
            });
        });

        function InitOverviewDataTable() {
            var table = $('#tbWasteBinSensor').DataTable({
                "ajax": {
                    "url": "/Application/GetLoRaWANData",
                    "tye": "GET",
                    "datatype": "json",
                    "data": function (d) {
                        d.deviceType = "WasteBinSensor",
                        d.deviceEUI = $('#deviceEUI').val(),
                        d.dateTimeStart = $('#date_timepicker_start').val(),
                        d.dateTimeEnd = $('#date_timepicker_end').val()
                    },
                    "contentType": "application/json; charset=utf-8",
                    "dataSrc": function (dataResult) {
                        console.log(dataResult);
                        if (dataResult.data.length === 0) {
                            $.notify({
                                title: "DATA FILTER : ",
                                message: "No data available",
                                icon: 'fa fa-exclamation'
                            }, {
                                type: "warning"
                            });
                        }
                        return dataResult.data;
                    }
                },
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'excelHtml5',
                        title: ($('#deviceEUI').val() === "" || $('#deviceEUI').val() == null ? "WasteBinSensorAll" : "DevEUI_" + $('#deviceEUI').val()) + " - @(DateTime.Now.ToString("yyyy-MM-dd_HH:mm:ss"))",
                        text: '<i class="fa fa-fw fa-lg fa-download"></i>Export to Excel',
                        className: 'btn btn-primary',
                    },
                ],
                "columns": [
                    { "data": "DateTime", "autowidth": true },
                    { "data": "DevEUI", "autowidth": true },
                    { "data": "GatewayEUI", "autowidth": true },
                    { "data": "Full", "autowidth": true },
                    { "data": "Flame", "autowidth": true },
                    { "data": "AirLevel", "autowidth": true },
                    { "data": "RSSI", "autowidth": true },
                    { "data": "SNR", "autowidth": true },
                ],
                "order": [[0, "desc"]]
            });
            setInterval(function () {
                var DateTime = getDateTime();
                $('#date_timepicker_end').val(DateTime.strDateTimeNow);
                table.ajax.reload(null, false);
            }, 60 * 1000);
        }
    </script>
}