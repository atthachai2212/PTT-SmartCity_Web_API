@model IEnumerable<PTT_SmartCity_Web_API.Entity.tbGPS>
@{
    ViewBag.Title = "Gps Tracking";
}

<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <!-- ส่วนหัว -->
            <div class="tile-title-w-btn">
                <h3 class="title">
                    <i class="fa fa-podcast"></i> @ViewBag.Title
                </h3>
            </div>
            <div class="tile-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered table-striped" id="tbGpsTracking">
                        <thead>
                            <tr style="text-align:center">
                                <th>DateTime</th>
                                <th>DevEUI</th>
                                <th>Latitude</th>
                                <th>Longitude</th>
                                <th>Battery</th>
                                <th>RSSI</th>
                                <th>SNR</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="text-align:center">
                                    <td>@Html.Raw(string.Format($"{item.Date.ToString("yyyy/MM/dd")} {item.Time}"))</td>
                                    <td>@item.DevEUI</td>
                                    <td>@item.Latitude</td>
                                    <td>@item.Longitude</td>
                                    <td>@item.Battery</td>
                                    <td>@item.RSSI</td>
                                    <td>@item.SNR</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>
        $('#applicationNav').addClass('is-expanded');
        $('#gpsTrackingNav').addClass('active').css('font-weight', 'bold');
    </script>
    <script type="text/javascript">
        $('#tbGpsTracking').DataTable({
            "order": [[0, "desc"]]
        });
    </script>
}