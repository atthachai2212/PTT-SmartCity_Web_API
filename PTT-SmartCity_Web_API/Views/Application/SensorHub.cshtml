@model IEnumerable<PTT_SmartCity_Web_API.Entity.tbSensorHub>
@{
    ViewBag.Title = "Sensor Hub";
}

<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <!-- ส่วนหัว -->
            <div class="tile-title-w-btn">
                <h3 class="title">
                    <i class="fa fa-sitemap"></i> @ViewBag.Title
                </h3>
            </div>
            <div class="tile-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered table-striped" id="tbSensorHub">
                        <thead>
                            <tr style="text-align:center">
                                <th>DateTime</th>
                                <th>DevEUI</th>
                                <th>Humidity</th>
                                <th>Temperature</th>
                                <th>CO2</th>
                                <th>BATVolt</th>
                                <th>BATCurrent</th>
                                <th>BATLevel</th>
                                <th>BATTemp</th>
                                <th>RSSI</th>
                                <th>SNR</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="text-align:center">
                                    <td>@Html.Raw(string.Format($"{item.Date.ToString("yyyy/MM/dd")} {item.Time}"))</td>
                                    <td>@item.DevEUI</td>
                                    <td>@item.Humidity</td>
                                    <td>@item.Temperature</td>
                                    <td>@item.CO2</td>
                                    <td>@item.BATVolt</td>
                                    <td>@item.BATCurrent</td>
                                    <td>@item.BATLevel</td>
                                    <td>@item.BATTemp</td>
                                    <td>@item.RSSI</td>
                                    <td>@item.SNR</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $('#applicationNav').addClass('is-expanded');
        $('#sensorHubNav').addClass('active').css('font-weight', 'bold');
    </script>
    <script type="text/javascript">
        $('#tbSensorHub').DataTable({
            "order": [[0, "desc"]]
        });
    </script>
}