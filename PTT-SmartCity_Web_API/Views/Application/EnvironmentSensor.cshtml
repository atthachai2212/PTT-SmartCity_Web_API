@model IEnumerable<PTT_SmartCity_Web_API.Entity.tbEnvironmentSensor>
@{
    ViewBag.Title = "Environment Sensor";
}

<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <!-- ส่วนหัว -->
            <div class="tile-title-w-btn">
                <h3 class="title">
                    <i class="fa fa fa-envira"></i> @ViewBag.Title
                </h3>
            </div>
            <div class="tile-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered table-striped" id="tbEnvironment">
                        <thead>
                            <tr style="text-align:center">
                                <th>DateTime</th>
                                <th>DevEUI</th>
                                <th>O2</th>
                                <th>O3</th>
                                <th>PM1</th>
                                <th>PM2.5</th>
                                <th>PM10</th>
                                <th>AirTemp</th>
                                <th>AirHumidity</th>
                                <th>AirPressure</th>
                                <th>BATLevel</th>
                                <th>BATVolt</th>
                                <th>RSSI</th>
                                <th>SNR</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="text-align:center">
                                    <td>@Html.Raw(string.Format($"{item.Date.ToString("yyyy/MM/dd")} {item.Time}"))</td>
                                    <td>@item.DevEUI</td>
                                    <td>@item.O2</td>
                                    <td>@item.O3</td>
                                    <td>@item.PM1</td>
                                    <td>@item.PM2_5</td>
                                    <td>@item.PM10</td>
                                    <td>@item.AirTemp</td>
                                    <td>@item.AirHumidity</td>
                                    <td>@item.AirPressure</td>
                                    <td>@item.BATLevel</td>
                                    <td>@item.BATVolt</td>
                                    <td>@item.RSSI</td>
                                    <td>@item.SNR</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $('#applicationNav').addClass('is-expanded');
        $('#enviromentNav').addClass('active').css('font-weight', 'bold');
    </script>
    <script type="text/javascript">
        $('#tbEnvironment').DataTable({
            "order": [[0, "desc"]]
        });
    </script>
}