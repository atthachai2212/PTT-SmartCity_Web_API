                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $('#applicationNav').addClass('is-expanded');
        $('#weatherNav').addClass('active').css('font-weight', 'bold');
    </script>
    <script type="text/javascript">
        $(document).ready(function() {
            var table = $('#tbWeatherSensor').DataTable({
                "ajax": {
                    "url": "/Application/GetLoRaWANData",
                    "tye": "GET",
                    "datatype": "json",
                    "data": { "deviceType" : "WeatherSensor"},
                    "contentType": "application/json; charset=utf-8",
                },
                "columns": [
                    { "data": "DateTime", "autowidth": true },
                    { "data": "DevEUI", "autowidth": true },
                    { "data": "GatewayEUI", "autowidth": true },
                    { "data": "WindSpeed", "autowidth": true },
                    { "data": "WindVane", "autowidth": true },
                    { "data": "RainfallCurrentHour", "autowidth": true },
                    { "data": "RainfallPreviousHour", "autowidth": true },
                    { "data": "RainfallLast_24Hours", "autowidth": true },
                    { "data": "Luminosity", "autowidth": true },
                    { "data": "BATLevel", "autowidth": true },
                    { "data": "BATVolt", "autowidth": true },
                    { "data": "RSSI", "autowidth": true },
                    { "data": "SNR", "autowidth": true },
                ],
                "order": [[0, "desc"]]
            });

            setInterval(function () {
                table.ajax.reload(null, false);
            }, 60 * 1000);

        });
    </script>
}