@model IEnumerable<PTT_SmartCity_Web_API.Entity.tbWeatherSensor>
@{
    ViewBag.Title = "Weather Sensor";
}

<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <!-- ส่วนหัว -->
            <div class="tile-title-w-btn">
                <h3 class="title">
                    <i class="fa fa-snowflake-o"></i> @ViewBag.Title
                </h3>
            </div>
            <div class="tile-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered table-striped" id="tbWeatherSensor">
                        <thead>
                            <tr style="text-align:center">
                                <th>DateTime</th>
                                <th>DevEUI</th>
                                <th>GatewayEUI</th>
                                <th>WindSpeed</th>
                                <th>WindVane</th>
                                <th>RainfallCurrentHour</th>
                                <th>RainfallPreviousHour</th>
                                <th>RainfallLast_24Hours</th>
                                <th>Luminosity</th>
                                <th>BATLevel</th>
                                <th>BATVolt</th>
                                <th>RSSI</th>
                                <th>SNR</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="text-align:center">
                                    <td>@Html.Raw(string.Format($"{item.Date.ToString("yyyy/MM/dd")} {item.Time}"))</td>
                                    <td>@item.DevEUI</td>
                                    <td>@item.GatewayEUI</td>
                                    <td>@item.WindSpeed</td>
                                    <td>@item.WindVane</td>
                                    <td>@item.RainfallCurrentHour</td>
                                    <td>@item.RainfallPreviousHour</td>
                                    <td>@item.RainfallLast_24Hours</td>
                                    <td>@item.Luminosity</td>
                                    <td>@item.BATLevel</td>
                                    <td>@item.BATVolt</td>
                                    <td>@item.RSSI</td>
                                    <td>@item.SNR</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $('#applicationNav').addClass('is-expanded');
        $('#weatherNav').addClass('active').css('font-weight', 'bold');
    </script>
    <script type="text/javascript">
        $('#tbWeatherSensor').DataTable({
            "order": [[0, "desc"]]
        });
    </script>
}