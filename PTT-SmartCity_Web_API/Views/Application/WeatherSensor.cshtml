
@{
    ViewBag.Title = "Weather Sensor";
}

<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <!-- ส่วนหัว -->
            <div class="tile-title-w-btn">
                <h3 class="title">
                    <i class="fa fa-snowflake-o"></i> @ViewBag.Title
                </h3>
            </div>
            <div class="tile-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered table-striped display nowrap" id="tbWeatherSensor">
                        <thead>
                            <tr style="text-align:center">
                                <th>DateTime</th>
                                <th>DevEUI</th>
                                <th>GatewayEUI</th>
                                <th>WindSpeed</th>
                                <th>WindVane</th>
                                <th>RainfallCurrentHour</th>
                                <th>RainfallPreviousHour</th>
                                <th>RainfallLast_24Hours</th>
                                <th>Luminosity</th>
                                <th>BATLevel</th>
                                <th>BATVolt</th>
                                <th>RSSI</th>
                                <th>SNR</th>
                            </tr>
                        </thead>
