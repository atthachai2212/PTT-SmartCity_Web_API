@model PTT_SmartCity_Web_API.Models.GetLoRaWANDeviceModel
@{
    ViewBag.Title = "Device List";
}

<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <!-- ส่วนหัว -->
            <div class="tile-title-w-btn">
                <h3 class="title">
                    <i class="fa fa-snowflake-o"></i> @ViewBag.Title
                </h3>
            </div>
            <div class="tile-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered table-striped" id="tbDeviceList">
                        <thead>
                            <tr style="text-align:center">
                                <th>DevEUI</th>
                                <th>DevType</th>
                                <th>GatewayEUI</th>
                                <th>DevModel</th>
                                <th>Created</th>
                                <th>Updated</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.items)
                            {
                                <tr style="text-align:center">
                                    <td>@item.DevEUI</td>
                                    <td>@item.DevType</td>
                                    <td>@item.GatewayEUI</td>
                                    <td>@item.DevModel</td>
                                    <td>@Html.Raw(item.Created?.ToString("MM/dd/yyyy HH:mm:ss"))</td>
                                    <td>@Html.Raw(item.Updated?.ToString("MM/dd/yyyy HH:mm:ss"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $('#loraWANNav').addClass('is-expanded');
        $('#deviceListNav').addClass('active').css('font-weight', 'bold');
    </script>
    <script type="text/javascript">
        $('#tbDeviceList').DataTable({
            "order": [[5, "desc"]]
        });
    </script>
}