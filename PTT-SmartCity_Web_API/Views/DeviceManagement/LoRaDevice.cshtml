                        //autowidth: true
                    },
                ],
                "searching": false,
                "lengthChange": false,
                "order": [[0, "desc"]]
            });
        }

        var LoRaDeviceValue = {
                DevAddr : $('#DevAddr').val(),
                DevEUI : $('#DevEUI').val(),
                DevType: $('#DevType').val(),
                DevModel: $('#DevModel').val(),
                GatewayEUI : $('#GatewayEUI').val(),
                Activate : $('#Activate').val(),
                Class : $('#Class').val(),
                Channel : $('#Channel').val(),
                AppSKey: $('#AppSKey').val(),
                NwkSkey : $('#NwkSkey').val()
        };

        //function GetLoRaDeviceData() {
