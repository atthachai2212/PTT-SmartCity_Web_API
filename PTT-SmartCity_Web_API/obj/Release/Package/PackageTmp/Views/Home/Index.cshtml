@using PTT_SmartCity_Web_API.Services
@{ 
    var listTypeCount = ViewBag.devTypeConut as List<PTT_SmartCity_Web_API.Models.GetLoRaDeviceData>;
    var gwCount = ViewBag.gwConut as List<PTT_SmartCity_Web_API.Models.GetLoRaGatewayData>;
    var devTypeConut = listTypeCount.GroupBy(g => g.DevType).Select(s => new { DevType = s.Key, Count = s.Count() }).ToList();
}
<div class="row">
    <div class="col-md-6 col-lg-3">
        <div class="widget-small primary coloured-icon">
            <i class="icon fa fa-server fa-3x"></i>
            <div class="info">
                <h4>LoRa Gateway</h4>
                <p><b>@gwCount.Count()</b></p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="widget-small info coloured-icon">
            <i class="icon fa fa-envira fa-3x"></i>
            <div class="info">
                <h4>Environment Sensor</h4>
                <p><b>@(devTypeConut.SingleOrDefault(x => x.DevType == AppSettingService.EnvironmentSensor)?.Count ?? 0)</b></p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="widget-small warning coloured-icon">
            <i class="icon fa fa-sitemap fa-3x"></i>
            <div class="info">
                <h4>Sensor Hub</h4>
                <p><b>@(devTypeConut.SingleOrDefault(x => x.DevType == AppSettingService.SensorHub)?.Count ?? 0)</b></p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="widget-small danger coloured-icon">
            <i class="icon fa fa-refresh fa-3x"></i>
            <div class="info">
                <h4>Waste Bin Sensor</h4>
                <p><b>@(devTypeConut.SingleOrDefault(x => x.DevType == AppSettingService.WasteBinSensor)?.Count ?? 0)</b></p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="widget-small danger coloured-icon">
            <i class="icon fa fa-snowflake-o fa-3x"></i>
            <div class="info">
                <h4>Weather Sensor</h4>
                <p><b>@(devTypeConut.SingleOrDefault(x => x.DevType == AppSettingService.WeatherSensor)?.Count ?? 0)</b></p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="widget-small danger coloured-icon">
            <i class="icon fa fa-thermometer-empty fa-3x"></i>
            <div class="info">
                <h4>Water Level Sensor</h4>
                <p><b>@(devTypeConut.SingleOrDefault(x => x.DevType == AppSettingService.WaterLevelSensor)?.Count ?? 0)</b></p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="widget-small danger coloured-icon">
            <i class="icon fa fa-thermometer-full fa-3x"></i>
            <div class="info">
                <h4>Water Quality Sensor</h4>
                <p><b>@(devTypeConut.SingleOrDefault(x => x.DevType == AppSettingService.WaterQualitySensor)?.Count ?? 0)</b></p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="widget-small danger coloured-icon">
            <i class="icon fa fa-podcast fa-3x"></i>
            <div class="info">
                <h4>Gps Tracking</h4>
                <p><b>@(devTypeConut.SingleOrDefault(x => x.DevType == AppSettingService.GpsTracking)?.Count ?? 0)</b></p>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $('#dashboardNav').addClass('active').css('font-weight', 'bold');
    </script>
}