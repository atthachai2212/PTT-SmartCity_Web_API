            <div class="tile-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered table-striped" id="tbWasteBinSensor">
                        <thead>
                            <tr style="text-align:center">
                                <th>DateTime</th>
                                <th>DevEUI</th>
                                <th>GatewayEUI</th>
                                <th>Full</th>
                                <th>Flame</th>
                                <th>AirLevel</th>
                                <th>RSSI</th>
                                <th>SNR</th>
                            </tr>
                        </thead>
