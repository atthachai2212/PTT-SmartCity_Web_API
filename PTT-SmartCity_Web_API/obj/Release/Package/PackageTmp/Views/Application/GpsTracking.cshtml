
@{
    ViewBag.Title = "Gps Tracking";
}

<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <!-- ส่วนหัว -->
            <div class="tile-title-w-btn">
                <h3 class="title">
                    <i class="fa fa-podcast"></i> @ViewBag.Title
                </h3>
            </div>
            <div class="tile-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered table-striped" id="tbGpsTracking">
                        <thead>
                            <tr style="text-align:center">
                                <th>DateTime</th>
                                <th>DevEUI</th>
                                <th>GatewayEUI</th>
                                <th>Latitude</th>
                                <th>Longitude</th>
                                <th>Battery</th>
                                <th>RSSI</th>
                                <th>SNR</th>
                            </tr>
                        </thead>
